  <header>ClayAlert! Cloud Control Panel</header>

  <main>
    <h2>Manage Your Alert Settings</h2>

    <label for="email">Alert Email:</label>
    <input type="email" id="email" placeholder="you@example.com" required>

    <label for="location">Location:</label>
    <input type="text" id="location" placeholder="Houston, TX" required>

    <div class="alert-options">
      <label>Alert Types:</label>
      <input type="checkbox" name="alert" value="storms"> Storms<br>
      <input type="checkbox" name="alert" value="tropical"> Tropical Systems<br>
      <input type="checkbox" name="alert" value="floods"> Flood Alerts<br>
      <input type="checkbox" name="alert" value="heat"> Heat Warnings<br>
    </div>

    <button onclick="saveSettings()">üíæ Save Settings</button>

    <p id="status"></p>
  </main>

  <script>
    const apiURL = "https://3i7jm1jwih.execute-api.us-east-1.amazonaws.com/";

    async function saveSettings() {
      const email = document.getElementById('email').value.trim();
      const location = document.getElementById('location').value.trim();
      const alerts = Array.from(document.querySelectorAll('input[name="alert"]:checked')).map(a => a.value);

      const status = document.getElementById('status');
      status.textContent = "Sending settings...";

      if (!email || !location) {
        status.textContent = "‚ö†Ô∏è Please fill out all fields.";
        return;
      }

      const payload = { email, location, alerts };

      try {
        const response = await fetch(apiURL, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(payload)
        });

        if (response.ok) {
          const data = await response.json();
          status.textContent = "‚úÖ Settings sent successfully!";
        } else {
          status.textContent = "‚ùå Failed to send settings.";
        }
      } catch (error) {
        console.error(error);
        status.textContent = "üö® Error connecting to ClayAlert! server.";
      }
    }
  </script>
